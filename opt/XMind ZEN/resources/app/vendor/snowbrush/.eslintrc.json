{
  "root": true,
  "globals": {
    "SVG": true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    },
    "allowImportExportEverywhere": true,
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".css",
          ".json",
          ".html",
          ".less"
        ]
      },
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "no-spaced-func": 1,
    "no-unreachable": 1,
    "no-unused-vars": [
      1,
      {
        "args": "none"
      }
    ],
    "no-console": 1,
    "valid-typeof": 2,
    "no-undef": 2,
    "eqeqeq": 1
  }
}